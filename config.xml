<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Todo List</name>
    <icon src="www/img/icon.png" width="57" height="57" density="mdpi"/>
    <description>
        Todo List App par Julien et Loick
    </description>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="www/img/bundle/android/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        <splash src="www/img/bundle/android/drawable-land-ldpi/screen.png" density="land-ldpi"/>
        <splash src="www/img/bundle/android/drawable-land-mdpi/screen.png" density="land-mdpi"/>
        <splash src="www/img/bundle/android/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>
        <splash src="www/img/bundle/android/drawable-land-xxhdpi/screen.png" density="land-xxhdpi"/>
        <splash src="www/img/bundle/android/drawable-land-xxxhdpi/screen.png" density="land-xxxhdpi"/>

        <splash src="www/img/bundle/android/drawable-hdpi/screen.png" density="port-hdpi"/>
        <splash src="www/img/bundle/android/drawable-ldpi/screen.png" density="port-ldpi"/>
        <splash src="www/img/bundle/android/drawable-mdpi/screen.png" density="port-mdpi"/>
        <splash src="www/img/bundle/android/drawable-xhdpi/screen.png" density="port-xhdpi"/>
        <splash src="www/img/bundle/android/drawable-xxhdpi/screen.png" density="port-xxhdpi"/>
        <splash src="www/img/bundle/android/drawable-xxxhdpi/screen.png" density="port-xxxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
